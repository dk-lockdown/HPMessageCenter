  <dataCommand name="UpdateTopicStatusToInValid" database="Write" commandType="Text">
    <commandText>
      <![CDATA[
        UPDATE `MessageCenter_v2`.`topic`
        SET `Status` = -1
        WHERE
	        `SysNo` = @SysNo
      ]]>
    </commandText>
