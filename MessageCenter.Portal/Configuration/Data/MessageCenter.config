<?xml version="1.0" encoding="utf-8"?>
<dataOperations>
  <dataCommand name="LoadApps" database="Read" commandType="Text">
    <commandText>
      <![CDATA[
        SELECT `app`.`AppID`,
            `app`.`AppName`,
            `app`.`CreateDate`
        FROM `MessageCenter_v2`.`app`;
      ]]>
    </commandText>
  </dataCommand>

  <dataCommand name="LoadExchanges" database="Read" commandType="Text">
    <commandText>
      <![CDATA[
        SELECT
	        `exchange`.`AppID`,
	        `app`.`AppName`,
	        `exchange`.`SysNo`,
	        `exchange`.`Name`,
	        `exchange`.`Memo`,
	        `exchange`.`CreateDate`
        FROM
	        `MessageCenter_v2`.`exchange`
        INNER JOIN `MessageCenter_v2`.`app` ON `app`.`AppID` = `exchange`.`AppID`
        ORDER BY
	        `exchange`.`SysNo` DESC
      ]]>
    </commandText>
  </dataCommand>
  
