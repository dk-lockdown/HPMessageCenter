  <dataCommand name="CreateTopic" database="Write" commandType="Text">
    <commandText>
      <![CDATA[
        INSERT INTO `MessageCenter_v2`.`topic` (
	        `AppID`,
	        `ExchangeSysNo`,
	        `Name`,
	        `Memo`,
	        `Status`,
	        `ProcessorType`,
	        `ProcessorConfig`,
	        `ProcessFailNotifyEmails`,
	        `ProcessorMaintainer`,
	        `CreateUserSysNo`,
	        `CreateDate`
        )
        VALUES
	        (
		        @AppID,
		        @ExchangeSysNo,
		        @Name,
		        @Memo,
		        1,
		        @ProcessorType,
		        @ProcessorConfig,
		        @ProcessFailNotifyEmails,
		        @ProcessorMaintainer,
		        @CreateUserSysNo,
		        now()
	        );
      ]]>
    </commandText>
  </dataCommand>
  
